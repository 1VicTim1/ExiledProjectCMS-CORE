# ExiledProjectCMS Environment Configuration
# Copy this file to .env and modify values as needed

# ===========================================
# APPLICATION SETTINGS
# ===========================================
ENVIRONMENT=production
APPLICATION_NAME=ExiledProjectCMS

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Options: SqlServer, MySQL, PostgreSQL
DATABASE_PROVIDER=SqlServer

# Database credentials
DB_NAME=ExiledProjectCMS
DB_USER=exiled
DB_PASSWORD=ExiledPass123!
DB_SA_PASSWORD=ExiledStrong123!
DB_ROOT_PASSWORD=ExiledStrong123!

# Connection strings (will be auto-generated based on provider)
DB_CONNECTION_STRING=
GO_DB_CONNECTION_STRING=

# Database ports
SQLSERVER_PORT=1433
MYSQL_PORT=3306
POSTGRES_PORT=5432

# ===========================================
# CACHE CONFIGURATION (OPTIONAL)
# ===========================================
# Options: Memory, Redis
# Note: Redis is optional but recommended for production
CACHE_PROVIDER=Redis
REDIS_HOST=redis
REDIS_PASSWORD=ExiledRedis123!
REDIS_PORT=6379
REDIS_DATABASE=0

# ===========================================
# API CONFIGURATION
# ===========================================
# Main C# API
API_PORT=5006

# Go Services Ports
GO_API_PORT=8080
SKINS_CAPES_PORT=8081
EMAIL_SERVICE_PORT=8082

# API Scaling
API_REPLICAS=1
GO_API_REPLICAS=2
SKINS_CAPES_REPLICAS=1
EMAIL_SERVICE_REPLICAS=1

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================
ADMIN_PORT=3000
WEBAPP_PORT=8090
WEBAPP_REPLICAS=2

# ===========================================
# LOAD BALANCER & PROXY
# ===========================================
HTTP_PORT=80
HTTPS_PORT=443

# ===========================================
# ADMIN USER
# ===========================================
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminStrong123!
ADMIN_DISPLAY_NAME=Super Admin

# ===========================================
# MONITORING (OPTIONAL)
# ===========================================
# Enable monitoring stack (Prometheus + Grafana)
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# ===========================================
# SECURITY & SSL
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key12

# SSL Configuration (for HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/exiled.crt
SSL_KEY_PATH=/etc/ssl/private/exiled.key

# ===========================================
# DISCORD OAUTH (for future implementation)
# ===========================================
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=https://yourdomain.com/auth/discord/callback

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP Settings (required for email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com
SMTP_USE_TLS=true

# Email Service Configuration
EMAIL_QUEUE_ENABLED=true
EMAIL_MAX_ATTEMPTS=3
EMAIL_RETRY_DELAY=300

# ===========================================
# SKINS & CAPES SERVICE
# ===========================================
# Storage path for skins and capes
SKINS_STORAGE_PATH=./storage/skins
BASE_URL=http://localhost

# Image processing settings
AVATAR_CACHE_DURATION=3600
MAX_SKIN_SIZE=2MB
MAX_CAPE_SIZE=1MB

# ===========================================
# STORAGE & UPLOADS
# ===========================================
UPLOAD_MAX_SIZE=50MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,zip
STORAGE_PROVIDER=local
# Options: local, s3, azure, gcs

# AWS S3 (if using S3 - OPTIONAL)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=exiled-cms-uploads

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=Information
LOG_FILE_PATH=/app/Logs/exiled-cms.log
LOG_MAX_SIZE=100MB

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================
# Cache expiration times (in seconds)
CACHE_DEFAULT_EXPIRATION=1800
CACHE_NEWS_EXPIRATION=900
CACHE_USERS_EXPIRATION=3600

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Set to true for development environments
DEBUG_MODE=false
ENABLE_SWAGGER=true
ENABLE_CORS=true

# Hot reload for plugins (development only)
ENABLE_PLUGIN_HOT_RELOAD=true

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups