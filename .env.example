# Database configuration (.env)
# Choose provider: mysql | postgresql
# For Docker Compose, set DB_HOST to the service name: "mysql" or "postgres"
DB_PROVIDER=mysql
DB_HOST=mysql

# Common settings
DB_PORT=3306
DB_NAME=exiledcms
DB_USER=root
DB_PASSWORD=yourpassword

# PostgreSQL example:
# DB_PROVIDER=postgresql
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=exiledcms
# DB_USER=postgres
# DB_PASSWORD=yourpassword
# Optional (PostgreSQL): DB_SSLMODE=Disable|Require|VerifyCA|VerifyFull (default: Disable)

# Seeded admin account (used when creating initial data, both in DB mode and in-memory)
ADMIN_LOGIN=admin
ADMIN_PASSWORD=admin123
# ADMIN_REQUIRE2FA=false
# ADMIN_IS_BANNED=false
# ADMIN_BAN_REASON=

# Docker Compose exposed ports
API_PORT=5190
GRAFANA_PORT=3000
PROMETHEUS_PORT=9090

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Prometheus web UI basic auth (optional)
# To enable, set both variables. Password must be bcrypt-hashed.
# Generate hash: htpasswd -nB -C 10 <user>  (copy the hash part)
# PROMETHEUS_WEB_USER=prom
# PROMETHEUS_WEB_PASSWORD_BCRYPT=$2y$10$replaceWithBcryptHash

# MySQL container root password (Docker Compose, mysql profile)
MYSQL_ROOT_PASSWORD=rootpassword

# Notes:
# - Place this file as ".env" in the repository root or the app's content root.
# - If DB_PROVIDER is not set or unknown, the API falls back to in-memory repositories.


# Swagger/OpenAPI
# Enable Swagger UI in non-development environments (true/false). Default: false
# Set to true to access /swagger when ASPNETCORE_ENVIRONMENT=Production
SWAGGER_ENABLED=false
